%h1 Listing features

%table
  %thead
    %tr
      %th Name
      %th Description
      %th Is active
      %th
      %th
      %th

  %tbody
    - @features.each do |feature|
      %tr
        %td= feature.name
        %td= feature.description
        %td= feature.is_active
        %td= link_to 'Show', feature
        %td= link_to 'Edit', edit_feature_path(feature)
        %td= link_to 'Destroy', feature, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }

= paginate @features


